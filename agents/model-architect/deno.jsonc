{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.ns", "deno.window", "dom", "esnext"],
    "strict": true,
    "types": ["./src/types"]
  },
  "tasks": {
    "start": "deno run --allow-net --allow-env src/autonomous.ts",
    "interactive": "deno run --allow-net --allow-env src/interactive.ts",
    "test": "deno test --allow-net --allow-env",
    "fmt": "deno fmt",
    "lint": "deno lint"
  },
  "imports": {
    "@types/deno": "npm:@types/deno"
  },
  "fmt": {
    "options": {
      "useTabs": false,
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": false,
      "proseWrap": "preserve"
    }
  }
}
