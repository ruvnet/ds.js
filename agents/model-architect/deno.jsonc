{
  "tasks": {
    "dev": "deno run --allow-read --allow-write --allow-net --allow-env --unstable src/index.ts",
    "test": "deno test --allow-read --allow-write --allow-env --unstable"
  },
  "compilerOptions": {
    "allowJs": true,
    "lib": ["dom", "esnext"],
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "imports": {
    "js-pytorch": "npm:js-pytorch",
    "std/": "https://deno.land/std@0.220.1/"
  },
  "fmt": {
    "files": {
      "include": ["src/"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  },
  "lint": {
    "files": {
      "include": ["src/"]
    },
    "rules": {
      "tags": ["recommended"]
    }
  }
}
